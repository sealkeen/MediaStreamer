<Window x:Class="MediaStreamer.WPF.Net40.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaStreamer.WPF.Net40"
                mc:Ignorable="d"
        Title="First FM Course Project" Height="202.4" Width="196.8" 
        MinWidth="480" MinHeight="440"
        Closing="Window_Closing"
            AllowsTransparency="False"
        >
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Frame
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch" 
                Grid.ColumnSpan="3" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" 
            Background="AliceBlue"
            x:Name="windowFrame" 
            Content="Frame"/>
    </Grid>
</Window>

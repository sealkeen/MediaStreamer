<local:FirstFMPage x:Class="MediaStreamer.WindowsDesktop.GroupMembersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MediaStreamer.WindowsDesktop"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="GroupMembersPage">

    <Grid Background="White">
        <ListView ItemsSource="{Binding GroupMembers}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding ArtistName}" 
                                    Header="ArtistName"
                                    Width="150"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding GroupFormationDate}" 
                                    Header="GroupFormationDate"
                                    Width="150"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</local:FirstFMPage>
